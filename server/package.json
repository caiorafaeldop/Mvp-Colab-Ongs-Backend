{
  "name": "node_server",
  "version": "1.0.0",
  "description": "",
  "main": "src/main/server.js",
  "scripts": {
    "start": "node src/main/server.js",
    "dev": "node src/main/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:singletons": "jest tests/unit/singletons",
    "test:singletons:watch": "jest tests/unit/singletons --watch",
    "test:api": "node tests/test-api.js",
    "verify:singletons": "node scripts/verify-singleton-usage.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "patterns:singleton": "node scripts/verify-singleton-usage.js",
    "docs:singleton": "cat docs/patterns/SINGLETON-SUMMARY.md",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "validate": "npm run lint && npm run verify:singletons",
    "prepare": "cd .. && husky server/.husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
